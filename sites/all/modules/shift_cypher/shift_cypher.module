function shift_cypher_menu () {
    $items['shift_cypher'] = array(
        'title' => 'Use the Shift Cypher!',
        'page callback' => 'drupal_get_form',
        'page arguments' => array('shift_form'),
        'access callback' => TRUE,
        'type' =>  MENU_NORMAL_ITEM,
    );

    $items['success'] = array(
        'title' => 'Success',
        'type' => MENU_CALLBACK,
